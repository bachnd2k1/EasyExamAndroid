<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.DialogTitle" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">start</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="CustomSearchViewTheme" parent="Widget.AppCompat.SearchView">
        <!-- Customize the colors, text appearance, etc. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:hint">@string/enter_name</item>
        <!-- Add more customizations as needed -->
    </style>


    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_pop_up</item>
        <item name="android:radius">10dp</item>
    </style>

    <style name="Widget.No.Dialog" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textColor">#A2A2A2</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
    </style>

    <style name="Widget.No.DialogPositive" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:background">@drawable/raised_button_background</item>
    </style>

    <string name="enter_name">Enter name here</string>
</resources>