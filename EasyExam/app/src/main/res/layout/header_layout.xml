<!-- res/layout/header_layout.xml -->
<!-- Customize this layout based on your header requirements -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/cardViewStyle"
    android:background="@color/peach"
    android:orientation="horizontal">
    <!-- Add TextViews for header titles -->
    <TextView
        android:id="@+id/headerIdTextView"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="ID" />

    <TextView
        android:id="@+id/headerNameTextView"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Name" />

    <TextView
        android:id="@+id/headerStateTextView"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="State" />

<!--    <TextView-->
<!--        android:id="@+id/headerOptionsTextView"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_weight="1"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:gravity="center"-->
<!--        android:text="Options" />-->
</LinearLayout>
